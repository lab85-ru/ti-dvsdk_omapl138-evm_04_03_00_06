/*  ============================================================================
 *  Load specified platform's DSP/BIOS Link configuration
 *  ============================================================================
 */
utils.importFile("platform.tci");


/*  ============================================================================
 *  TSK : Set Task Stack size to maximum possible
 *  ============================================================================
 */
prog.module("TSK").STACKSIZE = 64*1024;

/*  ============================================================================
 *  Enable MSGQ and POOL Managers
 *  ============================================================================
 */
bios.MSGQ.ENABLEMSGQ = true;
bios.POOL.ENABLEPOOL = true;

/*  ============================================================================
 *  Enable and configure LOG module
 *  ============================================================================
 */
bios.LOG.TS = true;

bios.LOG.create("trace");
bios.LOG.instance("trace").bufLen = 0x400;


/*  ============================================================================
 *  IDL mamanger setup
 *  ============================================================================
 */
bios.IDL.AUTOCALCULATE = false;

var loadIdle = bios.IDL.create("loadIdle");
loadIdle.comment = "Load calculating function";
loadIdle.fxn = prog.extern("C6RUN_UTIL_idleFxn");
loadIdle.calibration = false;



/*  ============================================================================
 *  Generate cdb file...
 *  ============================================================================
 */
if (config.hasReportedError == false) {
    prog.gen();
}
