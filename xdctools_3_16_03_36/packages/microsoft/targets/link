#!/bin/sh
#
#  Link a program using the linker command file generated by XDC
#
unset LIB
unset INCLUDE
unset LINK
unset CL

link="$1"
shift
suffix=""
prefix=""
cmdFile=""
for c in $*; do
    case $c in
        *.xdl ) prefix=$suffix; suffix=""; cmdFile=$c ;;
        *     ) suffix=$suffix"$c " ;;
    esac
done
$link  $prefix @$cmdFile $suffix

